<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="/static/css/body.css" type='text/css'/>

  
  <title>TinyApp</title>
</head>
<%- include('partials/_header') %>
<body id='body-all'>
  
  <main id='content'>
    
    <% if (!user) { %>
      <div id='box-home'>
        <div id='trapezio'>
          <h3>My URLs</h3>
          <p>Please <a href="/register">register</a> or <a href="/login">log in</a> to see your URLs.</p>
        </div>
        <div id='img-back-home'>

        </div>
    </div>
    <% } else { %>
      <div id='my-urls'>
      <h3>My URLs</h3>
    <table id='table'class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Delete</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      
      <tbody>
        <% for(let url in urls) { %>
          <tr>
            <td><a href="/urls/<%= url %>"><%= url %></a></td>
            <td><%= urls[url].longURL %></td>
            <td>
              <form method="POST" action="/urls/<%= url %>/delete">
                <input type="submit" value="Delete" class="btn btn-danger"></input>
              </form>
            </td>
            <td>
              <form method="GET" action="/urls/<%= url %>">
                <input type="submit" value="Edit" class="btn btn-secondary"></input>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <% } %>
  </div>
  </main>
  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>